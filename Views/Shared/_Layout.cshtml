<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OFF-ROAD.CA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="/content/Site.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OFF-ROAD.CA", "List", "Vehicle", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <img id="logo" src="~/images/logo.jpg"/>
                <ul class="nav navbar-nav">
                    <li><a href="/VehicleType/List">Vehicle Types</a></li>
                    <li><a href="/Vehicle/List">Vehicles</a></li>
                    <li><a href="/Owner/List"> Owners</a></li>
                    <li><a href="https://www.facebook.com/crawlfest/">Races</a></li>
                    <li><a href="https://www.facebook.com/pg/crawlfest/posts/?ref=page_internal"> Blog</a></li>
                    <li><a href="https://www.facebook.com/pg/crawlfest/events/?ref=page_internal"> Events Calendar</a></li>


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vitaliy Bulyma Code Referenced from PetGrooming by Christine Bittle</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
